datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  email String @unique
  // other fields...
}

model Post {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  title String
  // other fields...
}

model Paper {
  id    String @id @map("_id") @default(auto()) @db.ObjectId
  title String
  // other fields...
}
